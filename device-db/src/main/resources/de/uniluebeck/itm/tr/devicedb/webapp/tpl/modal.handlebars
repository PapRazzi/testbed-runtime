<div class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Edit Device Configuration</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="modal-form">
        <legend>Generic</legend>
        <div class="control-group">
            <label class="control-label" for="nodeUrn">Node URN</label>
            <div class="controls">
				<input type="text" id="nodeUrn" placeholder="e.g. [testbed-urn-prefix]:[mac]" value="{{nodeUrn}}">
                <span class="help-inline" title="mandatory field">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="nodeType">Node Type</label>
            <div class="controls">
                <input type="text" id="nodeType" placeholder="e.g. isense48" value="{{nodeType}}">
                <span class="help-inline" title="mandatory field">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="nodePort">Serial Port</label>
            <div class="controls">
                <input type="text" id="nodePort" placeholder="e.g. /dev/ttyUSB0" value="{{nodePort}}">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="nodeUSBChipID">USB Chip ID</label>
            <div class="controls">
                <input type="text" id="nodeUSBChipID" value="{{nodeUSBChipID}}">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="gatewayNode">Gateway</label>
            <div class="controls">
                <input type="checkbox" id="gatewayNode">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="description">Description</label>
            <div class="controls">
                <textarea id="description" rows="3">{{description}}</textarea>
            </div>
        </div>
        <legend>Position</legend>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.latitude">Latitude</label>
			<div class="controls">
				<input type="text" id="position.outdoorCoordinates.latitude" value="{{position.outdoorCoordinates.latitude}}">
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.longitude">Longitude</label>
			<div class="controls">
				<input type="text" id="position.outdoorCoordinates.longitude" value="{{position.outdoorCoordinates.longitude}}">
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.x">X</label>
			<div class="controls">
				<div class="input-append">
					<input type="text" id="position.outdoorCoordinates.x" value="{{position.outdoorCoordinates.x}}">
					<span class="add-on">m</span>
				</div>
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.y">Y</label>
			<div class="controls">
				<div class="input-append">
					<input type="text" id="position.outdoorCoordinates.y" value="{{position.outdoorCoordinates.y}}">
					<span class="add-on">m</span>
				</div>
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.z">Z</label>
			<div class="controls">
				<div class="input-append">
					<input type="text" id="position.outdoorCoordinates.z" value="{{position.outdoorCoordinates.z}}">
					<span class="add-on">m</span>
				</div>
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.phi">Phi</label>
			<div class="controls">
				<input type="text" id="position.outdoorCoordinates.phi" value="{{position.outdoorCoordinates.phi}}">
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.z">Theta</label>
			<div class="controls">
				<input type="text" id="position.outdoorCoordinates.theta" value="{{position.outdoorCoordinates.theta}}">
			</div>
		</div>
        <div class="control-group">
			<label class="control-label" for="position.outdoorCoordinates.rho">Rho</label>
			<div class="controls">
				<input type="text" id="position.outdoorCoordinates.rho" value="{{position.outdoorCoordinates.rho}}">
			</div>
		</div>
        <legend>Timeouts</legend>
        <div class="control-group">
            <label class="control-label" for="timeoutNodeApiMillis">Timeout Node-API</label>
            <div class="controls">
                <div class="input-append">
                    <input type="text" id="timeoutNodeApiMillis" value="{{timeoutNodeApiMillis}}">
                    <span class="add-on">ms</span>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="timeoutResetMillis">Timeout Reset</label>
            <div class="controls">
                <div class="input-append">
                    <input type="text" id="timeoutResetMillis" value="{{timeoutResetMillis}}">
                    <span class="add-on">ms</span>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="timeoutFlashMillis">Timeout Flash</label>
            <div class="controls">
                <div class="input-append">
                    <input type="text" id="timeoutFlashMillis" value="{{timeoutFlashMillis}}">
                    <span class="add-on">ms</span>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="timeoutCheckAliveMillis">Timeout Check-Alive</label>
            <div class="controls">
                <div class="input-append">
                    <input type="text" id="timeoutCheckAliveMillis" value="{{timeoutCheckAliveMillis}}">
                    <span class="add-on">ms</span>
                </div>
            </div>
        </div>
        <legend>Parameters</legend>
        <div id="params">
            {{#each nodeConfiguration}}
                {{>param-text-input}}
            {{/each}}
        </div>
        <a class="btn btn-mini" href="#" id="add-param" title="add parameter">
            <i class="icon-plus"></i> Add Parameter
        </a>

        <legend>Capabilities</legend>
        <div id="capabilities">
            {{#each capabilities}}
                {{>cap-text-inputs}}
            {{/each}}
        </div>
        <a class="btn btn-mini" href="#" id="add-cap" title="add capability">
            <i class="icon-plus"></i> Add Capability
        </a>

        <legend>Default Channel Pipeline</legend>
        <div id="pipeline">
            {{#each defaultChannelPipeline}}
                {{>pipeline-text-inputs}}
            {{/each}}
        </div>
        <a class="btn btn-mini" href="#" id="add-pipe" title="add channel handler">
            <i class="icon-plus"></i> Add ChannelHandler
        </a>

        </form>
    </div>
    <div class="modal-footer">
        <a href="#" id="close" class="btn">Close</a>
        <a href="#" id="save" class="btn btn-primary">Save changes</a>
    </div>
</div>