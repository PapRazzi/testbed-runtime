<button type="button" class="btn btn-primary role-add pull-right">
    <span class="glyphicon glyphicon-plus"></span> Add Role
</button>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>Role Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody id="table_roles">
	{{#each roles}}
        <tr data-id="{{this.name}}">
            <td>{{this.name}}</td>
            <td>
                <button type="button" class="btn btn-default btn-sm role-remove"
                        data-confirm="Really remove role '{{this.name}}'?">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </td>
        </tr>
	{{/each}}
    </tbody>
</table>
