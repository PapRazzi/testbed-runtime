<p id="button-role-add" class="pull-right">
    <a class="btn btn-info btn-small"><i class="icon-plus-sign icon-white"></i>Add Role</a>
</p>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>Role Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody id="table_roles">
	{{#each roles}}
        <tr data-id="{{this.name}}">
            <td>{{this.name}}</td>
            <td>
                <a class="btn btn-mini role-remove" data-confirm="Really remove role '{{this.name}}'?">
                    <i class="icon-remove" title="Remove this role"></i>
                </a>
            </td>
        </tr>
	{{/each}}
    </tbody>
</table>
