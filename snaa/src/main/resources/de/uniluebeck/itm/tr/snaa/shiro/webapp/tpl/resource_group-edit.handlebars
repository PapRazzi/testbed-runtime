<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Resource Group Details</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="resource_group-form">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Name</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="name" id="name" placeholder="enter a name..."
                                   value="{{resourceGroup.name}}"{{#if resourceGroup.name}} disabled="disabled"{{/if}}>
                        </div>
                        <div class="col-sm-1">
                            <span class="help-block">*</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="roles" class="col-sm-3 control-label">Node URNs in resource group</label>

                        <div class="col-sm-8">
                            <select multiple="multiple" class="form-control" name="nodeUrns" id="nodeUrns" size="10">
								{{#each resourceGroup.nodeUrns}}
                                    <option value="{{this}}">{{this}}</option>
								{{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <button type="button" class="btn btn-default btn-sm resource_group-add-node-urns">
                                <span class="glyphicon glyphicon-arrow-up"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-sm resource_group-remove-node-urns">
                                <span class="glyphicon glyphicon-arrow-down"></span>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="roles" class="col-sm-3 control-label">Available node URNs</label>

                        <div class="col-sm-8">
                            <select multiple="multiple" class="form-control" name="nodeUrnsAvailable"
                                    id="nodeUrnsAvailable" size="10">
								{{#each availableNodeUrns}}
                                    <option value="{{this.nodeUrn}}">{{this.nodeUrn}}</option>
								{{/each}}
                            </select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default edit-resource_group-close" data-dismiss="modal">Close
                </button>
                <button type="button" class="btn btn-primary edit-resource_group-save">Save changes</button>
            </div>
        </div>
    </div>
</div>
