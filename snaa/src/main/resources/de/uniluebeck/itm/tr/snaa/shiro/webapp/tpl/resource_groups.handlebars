<button type="button" class="btn btn-primary resource_group-add pull-right">
    <span class="glyphicon glyphicon-plus"></span> Add Resource Group
</button>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>Resource Group Name</th>
        <th>Node URNs</th>
		<th></th>
    </tr>
    </thead>
    <tbody id="table_resource_groups">
	{{#each resourceGroups}}
        <tr data-id="{{this.name}}">
            <td>{{this.name}}</td>
			<td>
				{{#each this.nodeUrns}}
					{{this}}<br/>
				{{/each}}
			</td>
            <td>
                <button type="button" class="btn btn-default btn-sm resource_group-edit">
                    <span class="glyphicon glyphicon-edit"></span>
                </button>
                <button type="button" class="btn btn-default btn-sm resource_group-remove"
                        data-confirm="Really remove resource group '{{this.name}}'?">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </td>
        </tr>
	{{/each}}
    </tbody>
</table>
