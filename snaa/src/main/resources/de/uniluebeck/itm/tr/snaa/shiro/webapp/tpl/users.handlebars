<p id="button-user-add" class="pull-right">
    <a class="btn btn-info btn-small"><i class="icon-plus-sign icon-white"></i>Add User</a>
</p>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>Name</th>
        <th>Roles</th>
        <th></th>
    </tr>
    </thead>
    <tbody id="table_configs">
	{{#each users}}
        <tr data-id="{{name}}">
            <td>{{name}}</td>
            <td>
				{{#each roles}}
                    <span class="label">{{this.name}}</span>
				{{/each}}
            </td>
            <td>
                <a class="btn btn-mini user-edit" title="Edit this entry">
					<i class="icon-edit"></i>
				</a>
				<br/>
                <a class="btn btn-mini user-remove" data-confirm="Really remove user '{{name}}'?">
					<i class="icon-remove" title="Remove this user"></i>
                </a>
            </td>
        </tr>
	{{/each}}
    </tbody>
</table>
