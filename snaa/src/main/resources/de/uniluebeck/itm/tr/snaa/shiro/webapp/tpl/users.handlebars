<button type="button" class="btn btn-primary user-add pull-right">
    <span class="glyphicon glyphicon-plus"></span> Add User
</button>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>Name</th>
        <th>Roles</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
	{{#each users}}
        <tr data-id="{{email}}">
            <td>{{email}}</td>
            <td>
				{{#each roles}}
                    <span class="label label-default">{{this.name}}</span>
				{{/each}}
            </td>
            <td>
                <button type="button" class="btn btn-default btn-sm user-edit">
                    <span class="glyphicon glyphicon-edit"></span>
                </button>
                <button type="button" class="btn btn-default btn-sm user-remove"
                        data-confirm="Really remove user '{{email}}'?">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </td>
        </tr>
	{{/each}}
    </tbody>
</table>