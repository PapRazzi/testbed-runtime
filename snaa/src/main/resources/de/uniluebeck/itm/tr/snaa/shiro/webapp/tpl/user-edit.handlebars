<div class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Add User</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="modal-form">

        <legend>Generic</legend>
        <div class="control-group">
            <label class="control-label" for="name">User-Name</label>
            <div class="controls">
                <input type="text" id="name" placeholder="enter a name..." value="{{name}}">
                <span class="help-inline" title="mandatory field">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="nodeType">Password</label>
            <div class="controls">
                <input type="text" id="password" value="{{nodeType}}">
                <span class="help-inline" title="mandatory field">*</span>
            </div>
        </div>

        </form>
    </div>
    <div class="modal-footer">
        <a href="#" id="close" class="btn">Close</a>
        <a href="#" id="save" class="btn btn-primary">Save changes</a>
    </div>
</div>